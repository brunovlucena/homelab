{{- /* RBAC Resources Template for API Server Source */ -}}
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ .Name }}-job-watcher-sa
  namespace: {{ .Namespace }}
  labels:
    app.kubernetes.io/name: {{ .Name }}
    app.kubernetes.io/component: job-watcher
    app.kubernetes.io/managed-by: knative-lambda-operator
    lambda.knative.io/name: {{ .LambdaName }}

---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: {{ .Name }}-job-watcher-role
  labels:
    app.kubernetes.io/name: {{ .Name }}
    app.kubernetes.io/component: job-watcher
    app.kubernetes.io/managed-by: knative-lambda-operator
    lambda.knative.io/name: {{ .LambdaName }}
rules:
- apiGroups:
  - ""
  resources:
  - events
  - namespaces
  verbs:
  - get
  - list
  - watch
- apiGroups:
  - batch
  resources:
  - jobs
  verbs:
  - get
  - list
  - watch
- apiGroups:
  - ""
  resources:
  - pods
  - pods/log
  verbs:
  - get
  - list
  - watch

---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ .Name }}-job-watcher-binding
  labels:
    app.kubernetes.io/name: {{ .Name }}
    app.kubernetes.io/component: job-watcher
    app.kubernetes.io/managed-by: knative-lambda-operator
    lambda.knative.io/name: {{ .LambdaName }}
subjects:
- kind: ServiceAccount
  name: {{ .Name }}-job-watcher-sa
  namespace: {{ .Namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ .Name }}-job-watcher-role

