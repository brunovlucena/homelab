{
  "title": "üîó Agent Communication - Inter-Agent Event Flow [v39]",
  "tags": ["agent-communication", "cloudevents", "inter-agent", "observability", "knative", "lambda"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "uid": "agent-communication",
  "editable": true,
  "graphTooltip": 2,
  "description": "Visualizes communication between all agents via CloudEvents. Shows event flow, latency, success rates, and inter-agent dependencies.",
  "links": [
    {
      "asDropdown": true,
      "icon": "external link",
      "includeVars": true,
      "keepTime": true,
      "tags": ["knative", "lambda", "agent"],
      "targetBlank": true,
      "title": "Agent Dashboards",
      "type": "dashboards"
    }
  ],
  "templating": {
    "list": [
      {
        "name": "agent",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": { "query": "label_values(up{namespace=~\"agent-.*\"}, namespace)", "refId": "StandardVariableQuery" },
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "label": "Agent Namespace"
      },
      {
        "name": "event_type",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": { "query": "label_values(agent_events_received_total, event_type)", "refId": "StandardVariableQuery" },
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "label": "Event Type"
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "üì° Communication Overview",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "üì® Events Received (1h)",
      "description": "Total CloudEvents received by all agents",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "id": 2,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "blue", "value": null }] },
          "unit": "short",
          "mappings": []
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(increase(agent_events_received_total{agent_id=~\"$agent\"}[1h])) or sum(increase(agent_tools_events_total[1h])) or vector(0)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "üì§ Events Sent (1h)",
      "description": "Total CloudEvents emitted by agents",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "id": 3,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] },
          "unit": "short",
          "mappings": []
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(increase(agent_events_sent_total{agent_id=~\"$agent\"}[1h])) or vector(0)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "‚úÖ Success Rate",
      "description": "Event processing success rate",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "id": 4,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.9 },
              { "color": "green", "value": 0.99 }
            ]
          },
          "unit": "percentunit",
          "decimals": 2,
          "mappings": []
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(agent_tools_events_total{status=\"success\"}[5m])) / sum(rate(agent_tools_events_total[5m])) or vector(1)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "‚è±Ô∏è P95 Latency",
      "description": "95th percentile event processing time",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "id": 5,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          },
          "unit": "s",
          "decimals": 2,
          "mappings": []
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.95, sum by (le) (rate(agent_tools_event_duration_seconds_bucket[5m]))) or vector(0)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "ü§ñ Active Agents",
      "description": "Number of agents currently UP",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "id": 6,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "purple", "value": null }] },
          "unit": "short",
          "mappings": []
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "count(up{namespace=~\"agent-.*\"} == 1)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "‚ùå Errors (5m)",
      "description": "Event processing errors",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "id": 7,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          },
          "unit": "short",
          "mappings": []
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(increase(agent_tools_events_total{status=\"error\"}[5m])) or sum(increase(agent_communication_errors_total[5m])) or vector(0)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "üìä Event Flow by Agent",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 10,
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "üì® Events Received by Agent",
      "description": "CloudEvents received per agent over time",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "id": 11,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 20,
            "gradientMode": "none",
            "hideFrom": { "legend": false, "tooltip": false, "viz": false },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "normal" },
            "thresholdsStyle": { "mode": "off" }
          },
          "unit": "ops",
          "mappings": [],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        }
      },
      "options": {
        "legend": { "calcs": ["mean", "sum"], "displayMode": "table", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum by (namespace) (rate(revision_request_count{namespace=~\"agent-.*\"}[5m]))",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "üì§ Event Types Processed",
      "description": "CloudEvent types being processed",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "id": 12,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "bars",
            "fillOpacity": 80,
            "gradientMode": "none",
            "hideFrom": { "legend": false, "tooltip": false, "viz": false },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "normal" },
            "thresholdsStyle": { "mode": "off" }
          },
          "unit": "short",
          "mappings": [],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        }
      },
      "options": {
        "legend": { "calcs": ["sum"], "displayMode": "table", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum by (event_type) (increase(agent_tools_events_total{event_type=~\"$event_type\"}[5m]))",
          "legendFormat": "{{event_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "üîç Agent Health Status",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 20,
      "collapsed": false
    },
    {
      "type": "table",
      "title": "ü§ñ Agent Status Overview",
      "description": "Current status of all agents",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 15 },
      "id": 21,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "options": { "0": { "color": "red", "index": 0, "text": "DOWN" }, "1": { "color": "green", "index": 1, "text": "UP" } }, "type": "value" }
          ],
          "custom": { "align": "center" }
        },
        "overrides": [
          { "matcher": { "id": "byName", "options": "namespace" }, "properties": [{ "id": "custom.width", "value": 200 }] },
          { "matcher": { "id": "byName", "options": "job" }, "properties": [{ "id": "custom.width", "value": 250 }] }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "footer": { "show": false },
        "sortBy": [{ "displayName": "Value", "desc": true }]
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "up{namespace=~\"agent-.*\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "__name__": true, "instance": true, "pod": true, "service": true, "container": true, "endpoint": true },
            "renameByName": { "namespace": "Agent Namespace", "job": "Service", "Value": "Status" }
          }
        }
      ]
    },
    {
      "type": "row",
      "title": "üìú Recent Events (Logs)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "id": 30,
      "collapsed": false
    },
    {
      "type": "logs",
      "title": "üìú Agent Communication Logs",
      "description": "Recent CloudEvent logs from all agents",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 24 },
      "id": 31,
      "datasource": { "type": "loki", "uid": "loki" },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "{namespace=~\"agent-.*\"} |~ \"event_received|event_sent|cloudevent|Received event|Processing event\"",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "‚ö° Performance Metrics",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 34 },
      "id": 40,
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "‚è±Ô∏è Event Processing Duration",
      "description": "Event processing time by agent (P50, P95, P99)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 35 },
      "id": 41,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": { "legend": false, "tooltip": false, "viz": false },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "line" }
          },
          "unit": "s",
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "options": {
        "legend": { "calcs": ["mean", "max"], "displayMode": "table", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.50, sum by (le) (rate(agent_tools_event_duration_seconds_bucket[5m])))",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.95, sum by (le) (rate(agent_tools_event_duration_seconds_bucket[5m])))",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.99, sum by (le) (rate(agent_tools_event_duration_seconds_bucket[5m])))",
          "legendFormat": "P99",
          "refId": "C"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "üéØ Overall Success Rate",
      "description": "Percentage of events processed successfully",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 35 },
      "id": 42,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.9 },
              { "color": "green", "value": 0.95 }
            ]
          },
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "mappings": []
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(agent_tools_events_total{status=\"success\"}[1h])) / sum(rate(agent_tools_events_total[1h])) or vector(1)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "bargauge",
      "title": "üìä Events by Namespace (1h)",
      "description": "Event distribution across agent namespaces",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 35 },
      "id": 43,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "blue", "value": null }] },
          "unit": "short",
          "mappings": []
        }
      },
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showUnfilled": true
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum by (namespace) (increase(revision_request_count{namespace=~\"agent-.*\"}[1h]))",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {}
}
