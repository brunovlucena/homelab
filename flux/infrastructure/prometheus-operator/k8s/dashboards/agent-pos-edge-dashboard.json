  "liveNow": false,
  "templating": {
    "list": [
      {
        "name": "location_id",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": { "query": "label_values(pos_transactions_total, location_id)", "refId": "StandardVariableQuery" },
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "label": "Location"
      },
      {
        "name": "agent_role",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": { "query": "label_values(pos_events_received_total, agent_role)", "refId": "StandardVariableQuery" },
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "label": "Agent Role"
      }
    ]
