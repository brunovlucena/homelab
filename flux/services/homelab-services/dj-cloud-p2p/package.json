{
  "name": "dj-cloud-p2p",
  "version": "0.1.0",
  "description": "DJ Cloud P2P - Streaming gratuito de m√∫sicas via P2P",
  "main": "dist-electron/main.js",
  "author": "DJ Cloud P2P Team",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:electron && vite build && electron-builder",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "signaling": "cd signaling-server && npm start"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-peer": "^9.11.1",
    "socket.io-client": "^4.6.1",
    "howler": "^2.2.4",
    "music-metadata": "^7.14.0",
    "zustand": "^4.4.7",
    "uuid": "^9.0.1",
    "idb": "^7.1.1",
    "easymidi": "^3.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@types/simple-peer": "^9.11.8",
    "@types/easymidi": "^2.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.djcloudp2p.app",
    "productName": "DJ Cloud P2P",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
